@model ActividadAutonoma.Models.Pokemon

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-capitalize">@Model.PokemonName</h2>
        <a asp-action="Index" class="btn btn-secondary">← Volver al Inicio</a>
    </div>

    <div class="card shadow-sm p-4">
        <div class="row">
            <!-- Imagen del Pokémon -->
            <div class="col-md-4 text-center">
                <img src="@Model.Images.DefaultFront" alt="@Model.PokemonName" class="img-fluid" style="max-width: 250px;">
            </div>

            <!-- Datos del Pokémon -->
            <div class="col-md-8">
                <h4>Información Básica</h4>
                <ul class="list-group list-group-flush mb-4">
                    <li class="list-group-item"><strong>ID:</strong> @Model.PokemonId</li>
                    <li class="list-group-item"><strong>Altura:</strong> @Model.PokemonHeight</li>
                    <li class="list-group-item"><strong>Peso:</strong> @Model.PokemonWeight</li>
                </ul>

                <h4>Habilidades</h4>
                <ul class="list-group list-group-flush mb-4">
                    @foreach (var skill in Model.Skills)
                    {
                        <li class="list-group-item text-capitalize">@skill.SkillDetail.SkillName</li>
                    }
                </ul>

                <h4>Tipos</h4>
                <ul class="list-group list-group-flush">
                    @foreach (var pokemonType in Model.PokemonTypes)
                    {
                        <li class="list-group-item text-capitalize">@pokemonType.TypeDetail.TypeName</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
