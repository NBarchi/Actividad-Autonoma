@model ActividadAutonoma.Models.Pokemon

<div class="container justify-content-center mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-capitalize">@Model.Name</h2>
        <a asp-action="Index" class="btn btn-primary">Volver al Inicio</a>
    </div>

    <div class="p-4">
        <div class="row" style="justify-content: center; align-items: center;">
            <div class="col-md-4">
                <img src="@Model.Sprites.FrontDefault" alt="@Model.Name" class="card-img-top">
            </div>

            <div class="col-md-4">
                <h4>Informaci√≥n</h4>
                <h6><strong>Peso:</strong> @Model.Weight lb</h6>
                <h6><strong>Altura:</strong> @Model.Height cm</h6>
                <br>
                <h4>Tipo</h4>
                @foreach (var type in Model.Types)
                {
                    <h6>@type.Type.Name.ToUpper()</h6>
                }
            </div>
        </div>
    </div>
</div>