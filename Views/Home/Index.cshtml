@model List<ActividadAutonoma.Models.PokemonItem>

<div class="container mt-5">
    <h1 class="text-center mb-4">Pokémons</h1>

    <div class="row">
        @foreach (var (pokemon, index) in Model.Select((p, i) => (p, i + ViewBag.Offset + 1)))
        {
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm">
                    <!-- Imagen del Pokémon -->
                    <img src="@pokemon.ImageUrl" alt="@pokemon.Name" class="card-img-top" />
                    <div class="text-center card-body">
                        <!-- Nombre del Pokémon -->
                        <h5 class="card-title text-capitalize">@pokemon.Name</h5>
                        <!-- Botón para ver detalles -->
                        <a asp-controller="Home" asp-action="Details" asp-route-name="@pokemon.Name" class="btn btn-primary">Ver Más</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="d-flex justify-content-between mt-4">
        @if (ViewBag.Previous != null)
        {
            <a asp-action="Index" asp-route-offset="@ViewBag.Previous" class="btn">Anterior</a>
        }
        else
        {
            <span></span>
        }

        @if (ViewBag.Next != null)
        {
            <a asp-action="Index" asp-route-offset="@ViewBag.Next" class="btn">Siguiente</a>
        }
    </div>
</div>
